{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "CMake: Build with Preset",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "--preset",
                "debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "detail": "Builds the project using the 'debug' preset defined in CMakePresets.json"
        }
    ]
}
